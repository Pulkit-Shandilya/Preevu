{
  "manifest_version": 3,
  "name": "Chrome Extension with Python Backend",
  "version": "1.0.0",
  "description": "A Chrome extension with Python Flask backend",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "https://*.amazon.com/*",
    "https://*.amazon.in/*",
    "https://*.flipkart.com/*",
    "https://*.ebay.com/*",
    "https://*.ebay.in/*",
    "https://*.walmart.com/*",
    "https://*.myntra.com/*",
    "https://*.ajio.com/*",
    "https://*.snapdeal.com/*",
    "https://*.meesho.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.in/*",
        "https://*.flipkart.com/*",
        "https://*.ebay.com/*",
        "https://*.ebay.in/*",
        "https://*.walmart.com/*",
        "https://*.myntra.com/*",
        "https://*.ajio.com/*",
        "https://*.snapdeal.com/*",
        "https://*.meesho.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
